Host *
  StrictHostKeyChecking no
  UserKnownHostsFile=/dev/null
  ServerAliveInterval 60

Host *andre.io
  ForwardAgent yes

Host dev
  HostName dev.andre.io
  User ubuntu
  IdentityFile ~/keys/andre.io

