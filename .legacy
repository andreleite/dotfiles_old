buscar()
	{
	clear;
	CUR_DIR=`pwd`;
	echo DIRECTORIO ACTUAL: $CUR_DIR;
	echo;
	
	if [ $1 = "-f" ]; then
		find $CUR_DIR -name $2 | more
	fi
	if [ $1 = "-s" ]; then
		grep -r -n "sub.$2" $CUR_DIR/* | grep -v svn | more
	else
		if [ $1 = "" ]; then
			echo Ingresa el patron!
			return
		fi
		 grep -r -n $1 $CUR_DIR/* | grep -v svn | more
	fi
	}

lns() {
    rm -f desarrollo; ln -s $1 desarrollo; ls -l;
    }

function promt_branch()
	{
	ls --color=never -l ~/sitio/lan | grep desarrollo | awk '{print $11}'
	}		 

function promt_env()
	{
	if [ -f ~/sitio/lan/desarrollo/apps/etc/apiswitch.conf ]; then
		ls --color=never -l ~/sitio/lan/desarrollo/apps/etc/apiswitch.conf | cut -d. -f4
	fi
}

makectags() 
	{
	ctags -R -f  $HOME/.ctags $DES/apps
	}

export PS1="[\$(promt_branch) (\$(promt_env))]\u@\h:\w\$ "

