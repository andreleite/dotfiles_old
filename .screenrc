startup_message off
defscrollback 10000

# 256 colors
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
defbce on

# mouse tracking allows to switch region focus by clicking
mousetrack on

# scroll
termcapinfo xterm* ti@:te@

# reload screenrc
bind R eval "source $HOME/.screenrc"

bind c screen 1 # window numbering starts at 1 not 0
bind 0 select 10
screen 1

defutf8 on
altscreen on
defshell -bash
shelltitle '$ |bash'
hardstatus alwayslastline " %H  %-w%{= wk} %n %t %{-}%+w %-= %c "
